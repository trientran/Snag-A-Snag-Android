<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/snagImg"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_oath1" />

    <TextView
        android:id="@+id/usernameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/snagImg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SnagChoker69" />

    <TextView
        android:id="@+id/timeLapseTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"

        app:layout_constraintStart_toEndOf="@+id/snagImg"
        app:layout_constraintTop_toBottomOf="@+id/usernameTv"
        tools:text="50mins ago" />

    <TextView
        android:id="@+id/commentTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/timeLapseTv"
        app:layout_constraintTop_toBottomOf="@+id/timeLapseTv"
        tools:text="The sausage was burnt and stank like rotten armpits, the bread was as stale as "
        android:layout_marginRight="24dp" />
</android.support.constraint.ConstraintLayout>